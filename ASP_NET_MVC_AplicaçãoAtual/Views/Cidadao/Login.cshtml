@model OuviCidadeV3.Models.Cidadao

@{
    ViewData["Title"] = "Login";
}

<h1>Login</h1>

<h4>Cidadao</h4>
<hr />
<div class="row text-center">
    
    <div class="col-md-4 mx-auto">
        <div class="col text-center">

            <div class="text-center">
                <img src="~/FrontEnd/assets/login.png" style="max-width: 100%; max-height: 100%;" />
            </div>

        </div>
    </div>

    <div class="col-md-4 mx-auto" style="margin-top: 100px">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Login" class="control-label" style="margin-right: 1000px"></label>
                <input asp-for="Login" class="form-control" />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Senha" class="control-label" style="margin-right: 1000px"></label>
                <input asp-for="Senha" class="form-control" type="password" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin-top: 10px; margin-bottom: 10px">
                <input type="submit" value="Login" class="btn btn-primary" style="margin-right: 1000px" />
            </div>
        </form>

        <div class="row">
            <div class="col-md-4">
                <a asp-controller="Cidadao" asp-action="Create">Nova Conta</a>
            </div>
            <div class="col-md-4">
                <a asp-controller="Home" asp-action="Index">Pagina Inicial</a>
            </div>
        </div>
    </div>
</div>


